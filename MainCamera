using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public voud MainCamera : MonoBehaviour
{
/**
*  공의 움직임에 맞춰 카메라가 일정한 간격을 유지하며 따라가게함
**/

  public Transform target; // 카메라가 따라갈 대상
  public Vector3 offset; // Ball과 카메라 사이의 거리

  void Start()
  {
    //시작할 떄 공과 카메라 사이의실제 거리를 계산해서 저장
    if(target != null)
    {
      // 게임 시작 시점의 카메라 위치에서 공의 위치를 빼어서 카메라와 공의 간격을 저장
      offset = transform.position - target.position;
    }
  }
 void LateUpdate() // 모든 Update 함수가 실행된 후 마지막에 호출
    {
        //LateUpdate는 카메라에 사용하기 제일 좋음
        if(target != null)
        {
            transform.position = target.position + offset;
            //공의 현재 위치에 처음에 계산한 거리를 더해서 카메라 위치를 둠
        }
    }
}
